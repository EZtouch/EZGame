{
  "name": "ezgame",
  "version": "1.0.0",
  "private": true,
  "description": "A TypeScript-based game utilizing the EZGameEngine.",
  "keywords": [
    "game"
  ],
  "license": "MIT",
  "author": "EZtouch <EZBotBusiness@GMail.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/EZtouch/EZGame.git"
  },
  "scripts": {
    "build": "webpack --config webpack.prod.js --progress",
    "deploy-docs": "yarn docs && ts-node tools/gh-pages-publish",
    "dev": "webpack --config webpack.dev.js --progress",
    "docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "lint": "tslint --format codeFrame --project .",
    "lint:fix": "yarn lint --fix",
    "start": "webpack-dev-server --config webpack.dev.js",
    "test": "jest",
    "test:prod": "yarn test --coverage --no-cache",
    "test:watch": "yarn test --watch",
    "watch": "webpack --watch"
  },
  "dependencies": {
    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "cache-loader": "^1.2.2",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "greenkeeper-lockfile": "^1.14.0",
    "html-webpack-plugin": "^3.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "style-loader": "^0.20.3",
    "thread-loader": "^1.1.5",
    "ts-jest": "^22.4.2",
    "ts-loader": "^4.1.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.1",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "vrsource-tslint-rules": "^5.8.2",
    "webpack": "^4.29.2",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2",
    "workbox-webpack-plugin": "^3.0.1"
  }
}
