{
  "name": "ezgame",
  "version": "1.0.0",
  "description": "A TypeScript-based game utilizing the EZGameEngine.",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/EZtouch/EZGame.git"
  },
  "author": "EZtouch",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "cache-loader": "^1.2.2",
    "clean-webpack-plugin": "^0.1.19",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "html-webpack-plugin": "^3.0.7",
    "jest": "^22.4.2",
    "thread-loader": "^1.1.5",
    "ts-jest": "^22.4.2",
    "ts-loader": "^4.1.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.7.2",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "vrsource-tslint-rules": "^5.8.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2",
    "workbox-webpack-plugin": "^3.0.0"
  },
  "scripts": {
    "lint": "tslint --format codeFrame 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "tslint --format codeFrame 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "build": "webpack --config webpack.prod.js --progress",
    "dev": "webpack --config webpack.dev.js --progress",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "typedoc --out docs --target es5 --theme minimal --mode file src && yarn lint && yarn test --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "watch": "webpack --watch",
    "start": "webpack-dev-server --config webpack.dev.js"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  }
}
