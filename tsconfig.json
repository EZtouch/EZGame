{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es5",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "lib": ["es2017", "dom"],
        "module": "es6",
        "allowJs": true
    }
    // },
    // "include": [
    //     "./src/**/*"
